<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/red_KK"
    android:gravity="bottom|center"
    android:padding="20dp"
    android:layout_height="180dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay"
        android:scaleType="centerCrop"
        android:src="@drawable/sac" />

    <TextView
        android:id="@+id/fullNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sachin_khatri"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/emailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sachin_gmail_com"
        android:textSize="20sp"
        android:visibility="invisible"
        android:textColor="@color/white"/>

</LinearLayout>